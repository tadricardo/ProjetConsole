@model ExoMVC.ViewModels.UtilisateurViewModel
<!doctype html>
<html lang="en">
<head>
    <title>Authentification</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/Content/css/style.css" rel="stylesheet" />

</head>
<body class="img js-fullheight" style="background-image: url(/Content/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Authentification</h2>
                </div>
            </div>
            <span>
                @Html.Partial("_Notifications")
            </span>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">@Html.ActionLink("Créer un compte","Create","Account")</h3>
                        <form method="post" class="signin-form">
                            @Html.ValidationMessageFor(m => m.UserName)
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Username" name="UserName">
                            </div>
                            @Html.ValidationMessageFor(m => m.Password)
                            <div class="form-group">
                                <input id="password-field" type="password" class="form-control" placeholder="Password" name="Password">
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Connexion</button>
                            </div>
                            <div class="form-group">
                               @*@if (ViewBag.Erreur != null)
                               {
                                   @ViewBag.Erreur
                               }*@

                            </div>


                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>


    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/popper.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/main.js"></script>

</body>
</html>

